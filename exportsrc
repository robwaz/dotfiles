# vi mode
export KEYTIMEOUT=1

# Exports
export EDITOR="vim"
export ANSIBLE_HOSTS=~/.ansible/ansible_hosts
export PATH="$PATH:${HOME}/.npm-global/bin/"
export PATH="$PATH:${HOME}/.local/bin/"
